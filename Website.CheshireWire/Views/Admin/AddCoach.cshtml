@{
    ViewBag.Title = "Add Coach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

<form method="post" action="~/Admin/AddCoach">
    <div class="page-header">
        <h2>Add New Coach</h2>
    </div>
    <div class="panel">
        <div class="panel-body">
            <ul class="list-unstyled">
                <li>League: @Html.TextBox("leagueName")</li>
                <li>Team Name: @Html.TextBox("teamName")</li>
                <li>Name: @Html.TextBox("name")</li>
                <li>Position: @Html.TextBox("position")</li>
                <li>ImgName: @Html.TextBox("imgName")</li>
            </ul>
            <input type="submit" value="Submit" />
            <input type="submit" value="Cancel" formaction="~/Admin/ManageCoaches" />
        </div>
    </div>
</form>