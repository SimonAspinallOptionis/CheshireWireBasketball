<div id="myTabContent" class="tab-content">
    <div class="panel-heading">
        @Html.ActionLink("Add New Player", "AddPlayer", "Admin", new object { }, new { @class = "btn-sm btn-success" })
    </div>
    <div class="tab-pane fade active in" id="white">
        <div class="panel-body">
            <table class="table">
                <tr class="success">
                    <th>Name</th>
                    <th>Number</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
                @foreach (var player in ViewBag.Under13WhiteRoster)
                {
                    <tr>
                        <td>@player.Name</td>
                        <td>@player.Number</td>
                        <td>@player.Position</td>
                        <td>
                            @Html.ActionLink("Edit", "EditPlayer", "Admin", new { Id = player.Id }, new { @class = "btn-sm btn-default" })
                            @Html.ActionLink("Remove Player", "RemovePlayer", "Admin", new { id = player.Id }, new { @class = "btn-sm btn-default" })
